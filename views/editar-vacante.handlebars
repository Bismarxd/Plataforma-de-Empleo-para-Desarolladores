<main class="contenedor">
    <form action="/vacantes/editar/{{vacante.url}}" method="POST" class="default-form">
        <h3>Informaci贸n General</h3>

        <div class="campo">
            <label for="nombre">Titulo</label>
            <input id="nombre" type="text" name="titulo" placeholder="Ej: REact Developer, Node Developer, etc." value="{{vacante.titulo}}">
        </div>

        <div class="campo">
            <label for="empresa">Empresa</label>
            <input id="empresa" type="text" name="empresa" placeholder="Empresa a Contratar" value="{{vacante.empresa}}">
        </div>

        <div class="campo">
            <label for="ubicacion">Ubicaci贸n</label>
            <input id="ubicacion" type="text" name="ubicacion" placeholder="Ubicacion de la Empresa" value="{{vacante.ubicacion}}">
        </div>

         <div class="campo">
            <label for="salario">Salario (Bs)</label>
            <input id="salario" type="text" name="salario" placeholder="Ej: 5000 Bs" value="{{vacante.salario}}">
        </div>

        <div class="campo">
            <label for="contrato">Contrato</label>
            <select name="contrato" id="contrato">
                {{#tipoContrato vacante.contrato}}
                <option value="" disabled selected>---Seleccione---</option>
                <option value="FreeLance">FreeLance</option>
                <option value="Tiempo Completo">Tiempo Completo</option>
                <option value="Medio Tiempo">Medio Tiempo</option>
