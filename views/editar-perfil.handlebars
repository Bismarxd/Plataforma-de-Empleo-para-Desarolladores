<main class="contenedor">
    <form action="/editar-perfil" method="POST" class="default-form" enctype="multipart/form-data">
        <div class="campo">
            <label for="nombre">Nombre</label>
            <input type="text" name="nombre" id="nombre" placeholder="Tu Nombre" value="{{usuario.nombre}}">
        </div>

        <div class="campo">
            <label for="email">Correo Electrónico</label>
            <input type="email" name="email" id="email" placeholder="Tu Email" value="{{usuario.email}}">
        </div>

        <div class="campo">
            <label for="password">Contraseña</label>
            <input type="password" name="password" id="password" placeholder="Tu Pasword">
        </div>

        <div class="campo">
            <label for="imagen">Imagen</label>
            <input type="file" name="imagen" id="imagen" placeholder="Tu Imagen de Perfil">
            <img src="uploads/perfiles/{{usuario.imagen}}" alt="imagen perfil" class="admin-perfil">
        </div>

        <div class="campo">
            <input type="submit" class="btn btn-azul" value="Guardar Cambios">
        </div>
        
    </form>
</main>